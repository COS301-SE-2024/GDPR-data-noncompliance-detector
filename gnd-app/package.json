{
  "name": "gnd-app",
  "productName": "GND",
  "description": "GDPR Non-compliance Detector Application",
  "icon": "src/assets/logo.ico",
  "author": "AprilFour",
  "version": "1.0.3",
  "main": "main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron": "ng build && electron .",
    "electron:dev": "ng build --base-href ./ && electron .",
    "pack": "electron-builder --dir",
    "dist": "ng build --base-href ./ && electron-builder"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.0.4",
    "@angular/cdk": "^18.0.2",
    "@angular/compiler": "^18.0.4",
    "@angular/material": "^18.0.2",
    "@angular/platform-browser": "^18.0.4",
    "@types/d3": "^7.4.3",
    "apexcharts": "^3.53.0",
    "axios": "^1.7.2",
    "chart.js": "^4.4.4",
    "chartjs-chart-geo": "^4.3.1",
    "d3": "^7.9.0",
    "echarts": "^5.5.1",
    "electron-reload": "^2.0.0-alpha.1",
    "flowbite": "^2.3.0",
    "globe.gl": "^2.32.5",
    "gnd-app": "file:",
    "intro.js": "^7.2.0",
    "jspdf": "^2.5.2",
    "ng-apexcharts": "^1.12.0",
    "ng2-charts": "^6.0.1",
    "ngx-echarts": "^18.0.0",
    "node-notifier": "^10.0.1",
    "rxjs": "~7.8.0",
    "three": "^0.168.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.7"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.0.5",
    "@angular/cli": "^18.0.5",
    "@angular/common": "^18.0.4",
    "@angular/compiler-cli": "^18.0.4",
    "@angular/core": "^18.0.4",
    "@angular/forms": "^18.0.4",
    "@angular/platform-browser-dynamic": "^18.0.4",
    "@angular/router": "^18.0.4",
    "@types/jasmine": "~4.3.0",
    "@types/node": "^20.14.8",
    "@types/three": "^0.168.0",
    "electron": "^30.2.0",
    "electron-builder": "^24.13.3",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "tailwindcss": "^3.4.4",
    "typescript": "~5.4.5"
  },
  "build": {
    "appId": "com.aprilfour.gnd",
    "directories": {
      "output": "release/"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "package.json",
      "src/assets/logo.ico"
    ],
    "win": {
      "icon": "src/assets/logo.ico",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "src/assets/logo.ico",
      "uninstallerIcon": "src/assets/logo.ico",
      "uninstallDisplayName": "GND",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "GND"
    }
  }
}
